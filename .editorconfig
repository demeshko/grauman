root = true

# Enusure line endings are Unix style
[*]
end_of_line = lf
insert_final_newline = true

# Ensure 4 space indents for javascrtpt
[*.{js, yaml}]
charset = utf-8
indent_style = space
indent_size = 4

# Ensure JSON documents have correct indentation
[*.json]
indent_style = space
indent_size = 2
